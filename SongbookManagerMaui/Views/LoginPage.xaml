<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SongbookManagerMaui.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:resource="clr-namespace:SongbookManagerMaui.Resx"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Shell.NavBarIsVisible="False"
    Style="{StaticResource BaseContentPage}">

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{StaticResource Tertiary}" StatusBarStyle="DarkContent" />
    </ContentPage.Behaviors>

    <VerticalStackLayout Padding="10" VerticalOptions="Center">
        <ScrollView>
            <VerticalStackLayout>
                <Image Source="logo.png" WidthRequest="150" />

                <Label
                    Margin="0,10,0,0"
                    HorizontalOptions="Center"
                    Style="{StaticResource TitleLabel}"
                    Text="{x:Static resource:AppResources.SignIn}" />

                <Entry
                    Margin="0,10,0,0"
                    Keyboard="Email"
                    Placeholder="{x:Static resource:AppResources.Email}"
                    Text="{Binding Email}" />

                <Entry
                    IsPassword="True"
                    Placeholder="{x:Static resource:AppResources.Password}"
                    Text="{Binding Password}" />

                <HorizontalStackLayout Margin="0,-10,0,0" Spacing="3">
                    <Button
                        Padding="0,0,2,0"
                        Command="{Binding SignUpCommand}"
                        HeightRequest="50"
                        Style="{StaticResource TransparentButton}"
                        Text="{x:Static resource:AppResources.NewUser}" />
                    <Button
                        Command="{Binding ForgotPasswordCommand}"
                        HeightRequest="50"
                        Style="{StaticResource TransparentButton}"
                        Text="{x:Static resource:AppResources.ForgotPassword}" />
                </HorizontalStackLayout>

                <Button
                    Margin="0,20,0,0"
                    Command="{Binding LoginCommand}"
                    HeightRequest="45"
                    Style="{StaticResource MainButton}"
                    Text="{x:Static resource:AppResources.SignIn}" />
            </VerticalStackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>