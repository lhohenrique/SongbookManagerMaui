<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SongbookManagerMaui.Views.ForgotPasswordPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:resource="clr-namespace:SongbookManagerMaui.Resx"
    Title="{x:Static resource:AppResources.ForgotPassword}"
    Style="{StaticResource BaseContentPage}">

    <VerticalStackLayout Padding="10" VerticalOptions="Start">
        <ScrollView>
            <StackLayout Spacing="20">
                <Label
                    HorizontalOptions="Center"
                    Style="{StaticResource TitleLabel}"
                    Text="{x:Static resource:AppResources.ResetPasswordTitle}" />

                <Label
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource BaseLabel}"
                    Text="{x:Static resource:AppResources.ResetPasswordDescription}" />

                <Entry
                    Keyboard="Email"
                    Placeholder="{x:Static resource:AppResources.Email}"
                    Text="{Binding Email}" />

                <Button
                    Margin="0,10,0,0"
                    Command="{Binding ResetPasswordCommand}"
                    Style="{StaticResource MainButton}"
                    Text="{x:Static resource:AppResources.ResetPasswordTitle}" />
            </StackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>