<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SongbookManagerMaui.Views.ChangePasswordPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:resource="clr-namespace:SongbookManagerMaui.Resx"
    Shell.TabBarIsVisible="False"
    Style="{StaticResource BaseContentPage}">

    <ContentPage.Content>
        <StackLayout Padding="10" Spacing="10">
            <Label
                HorizontalOptions="Center"
                Style="{StaticResource TitleLabel}"
                Text="{x:Static resource:AppResources.ChangePassword}" />

            <Entry
                IsPassword="True"
                Placeholder="{x:Static resource:AppResources.NewPassword}"
                Text="{Binding NewPassword}" />

            <Entry
                IsPassword="True"
                Placeholder="{x:Static resource:AppResources.ConfirmPassword}"
                Text="{Binding ConfirmNewPassword}" />
            <Label Text="{Binding PasswordErrorMessage}" TextColor="Red" />

            <Button
                Command="{Binding ChangePasswordCommand}"
                Style="{StaticResource MainButton}"
                Text="{x:Static resource:AppResources.ChangePassword}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>