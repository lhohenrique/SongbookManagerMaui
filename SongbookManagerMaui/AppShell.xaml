<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SongbookManagerMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SongbookManagerMaui"
    xmlns:resource="clr-namespace:SongbookManagerMaui.Resx"
    xmlns:views="clr-namespace:SongbookManagerMaui.Views"
    Title="SongbookManagerMaui"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarDisabledColor="LightGray"
    Shell.TabBarTitleColor="#131516"
    Shell.TabBarUnselectedColor="#5B6677">

    <ShellItem FlyoutItemIsVisible="False" Route="LoginPage">
        <ShellContent ContentTemplate="{DataTemplate views:LoginPage}" />
    </ShellItem>

    <TabBar>
        <Tab
            Title="{x:Static resource:AppResources.Musics}"
            Icon="musics.png"
            Route="MusicPage">
            <ShellContent>
                <views:MusicPage Title="{x:Static resource:AppResources.Musics}" />
            </ShellContent>
        </Tab>
        <!--<Tab Title="{x:Static resource:AppResources.Repertoires}" Route="RepertoirePage" Icon="repertoire.png">
            <ShellContent>
                <Views:RepertoirePage Title="{x:Static resource:AppResources.Repertoires}"/>
            </ShellContent>
        </Tab>
        <Tab Title="{x:Static resource:AppResources.Profile}" Route="ProfilePage" Icon="profile.png">
            <ShellContent>
                <Views:ProfilePage Title="{x:Static resource:AppResources.Profile}"/>
            </ShellContent>
        </Tab>-->
    </TabBar>

    <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />-->

</Shell>
