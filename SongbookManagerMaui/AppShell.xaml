<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SongbookManagerMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SongbookManagerMaui"
    xmlns:resource="clr-namespace:SongbookManagerMaui.Resx"
    xmlns:views="clr-namespace:SongbookManagerMaui.Views"
    Title="SongbookManagerMaui"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarDisabledColor="LightGray"
    Shell.TabBarTitleColor="#131516"
    Shell.TabBarUnselectedColor="#5B6677">

    <ShellItem FlyoutItemIsVisible="False" Route="LoginPage">
        <ShellContent ContentTemplate="{DataTemplate views:LoginPage}" />
    </ShellItem>

    <TabBar>
        <Tab
            Title="Musics"
            Icon="musics.png"
            Route="MusicPage">
            <ShellContent ContentTemplate="{DataTemplate views:MusicPage}" />
        </Tab>
        <Tab
            Title="{x:Static resource:AppResources.Repertoires}"
            Icon="repertoire.png"
            Route="RepertoirePage">
            <ShellContent ContentTemplate="{DataTemplate views:RepertoirePage}" />
        </Tab>
        <Tab
            Title="{x:Static resource:AppResources.Profile}"
            Icon="profile.png"
            Route="ProfilePage">
            <ShellContent ContentTemplate="{DataTemplate views:ProfilePage}" />
        </Tab>
    </TabBar>
</Shell>
